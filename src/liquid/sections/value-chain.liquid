{% for block in section.blocks %}
    {% case block.type %}
    {% when 'page-panel' %}
    {% render 'page-panel' with {
        settings: block.settings
        } %}
    {% when 'page-hero' %}
    {% render 'page-hero' with {
        settings: block.settings
        } %}
    {% when 'tag-line' %}
    {% render 'tag-line' %}
    {% endcase %}
{% endfor %}


{% schema %}
                {
                  "blocks": [
                    {
                      "type": "tag-line",
                      "name": "Tag Line",
                      "settings": []
                    },
                    {
                      "type": "page-panel",
                      "name": "Page Panel",
                      "settings": [
                        {
                          "type": "radio",
                          "id": "position",
                          "label": "Position",
                          "options": [
                            { "value": "left", "label": "Left" },
                            { "value": "right", "label": "Right" }
                          ],
                          "default": "left"
                        },
                        {
                          "type": "textarea",
                          "id": "content",
                          "default": "This is Panel Content",
                          "label": "Content"
                        },
                        {
                          "type": "image_picker",
                          "id": "image",
                          "label": "Image",
                          "info": "Dimensions: 578x384"
                        }
                      ]
                    },
                    {
                      "type": "page-hero",
                      "name": "Page Hero",
                      "settings":[
                        {
                          "type": "text",
                          "id": "hero_title",
                          "default": "Notre Promesse",
                          "label": "Title"
                        },
                        {
                          "type": "textarea",
                          "id": "hero_subtitle",
                          "default": "This is a subtitle",
                          "label": "Subtitle"
                        },
                        {
                          "type": "textarea",
                          "id": "hero_content",
                          "default": "This is content",
                          "label": "Content"
                        },
                        {
                          "type": "image_picker",
                          "id": "hero_image",
                          "label": "Image",
                          "info": "Dimensions: 450x640"
                        }
                      ]
                    }
                  ]
                }
{% endschema %}
