{% for block in section.blocks %}
    {% case block.type %}
    {% when 'hero' %}
    {% render 'hero-promise' with {
        settings: block.settings,
        id: block.id
        } %}
    {% endcase %}
{% endfor %}


{% schema %}
                {
                  "blocks": [
                    {
                      "type": "hero",
                      "name": "Hero Promise",
                      "settings":[
                        {
                          "type": "image_picker",
                          "id": "desktop_image",
                          "label": "Image for Desktops",
                          "info": "Dimensions: 2880x1680"
                        }
                      ]
                    }
                  ]
                }
{% endschema %}
