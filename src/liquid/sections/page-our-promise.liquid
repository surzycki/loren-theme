{% for block in section.blocks %}
    {% case block.type %}

    {% when 'hero' %}
    {% render 'hero-promise' with {
        settings: block.settings,
        id: block.id
    }%}

    {% when 'notification-bar' %}
    {%  render 'notification-bar' %}

    {% when 'panel-promises'%}
    {% render 'panel-promises' with {
        settings: block.settings,
        id: block.id
    }%}

    {% when 'footer-top' %}
    {%  render 'footer-top' %}

    {% when 'footer-bottom' %}
    {%  render 'footer-bottom' %}

    {% endcase %}
{% endfor %}


