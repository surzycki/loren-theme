{% for block in section.blocks %}
    {% case block.type %}

    {% when 'hero' %}
    {% render 'hero-coffee' with {
        settings: block.settings,
        id: block.id
    } %}

    {% when 'notification-bar' %}
    {%  render 'notification-bar' %}

    {% when 'footer-top' %}
    {%  render 'footer-top' %}

    {% when 'footer-bottom' %}
    {%  render 'footer-bottom' %}

    {% endcase %}
{% endfor %}


{% schema %}
                {
                  "blocks": [
                    {
                      "type": "hero",
                      "name": "Hero Coffee",
                      "settings": [
                        {
                            "type": "image_picker",
                            "id": "desktop_image",
                            "label": "Image for Desktops",
                            "info": "Dimensions: 2880x1680"
                        },
                        {
                            "type": "image_picker",
                            "id": "testimonial_image",
                            "label": "Image of testimonial",
                            "info": "Dimensions: 64x64"
                        },
                        {
                            "type": "text",
                            "id": "testimonial_author",
                            "label": "Author of testimonial"
                        },
                        {
                            "type": "textarea",
                            "id": "testimonial_content",
                            "label": "Content of testimonial"
                        }
                      ]
                    },
                    {
                      "type": "notification-bar",
                      "name": "Notification bar",
                      "settings": []
                    },
                    {
                      "type": "footer-top",
                      "name": "Top Footer",
                      "settings": []
                    },
                    {
                      "type": "footer-bottom",
                      "name": "Bottom Footer",
                      "settings": []
                    }
                  ]
                }
{% endschema %}
