{% for block in section.blocks %}
    {% case block.type %}
    {% when 'horizontal-line' %}
    {% render 'horizontal-line' with {
        settings: block.settings
        } %}
    {% when 'tag-line' %}
    {% render 'tag-line' %}
    {% when 'coffee-hero' %}
    {% render 'coffee-hero' with {
        settings: block.settings
        } %}
    {% when 'product-panel' %}
    {% render 'product-panel' with {
        settings: block.settings
        product: all_products[block.settings.product]
        } %}
    {% endcase %}
{% endfor %}


