{% if settings.position == 'left' %}

<section class='container mb-8'>
    <div class='row'>
        <div class='col-12 col-md-6 text-start'>
            <img class='lazy-loaded' src="{{ settings.image | img_url: '578x384'}}" data-lazy-type='image' data-src="{{ settings.image | img_url: '578x384'}}"/>
        </div>

        <div class='col-12 col-md-6 text-end'>
            <div class='h2 hero pt-2'>
                {{ settings.content  }}
            </div>
        </div>
    </div>
</section>

{% elsif settings.position == 'right' %}

<section class='container mb-8'>
    <div class='row'>
        <div class='col-12 col-md-6 text-start'>
            <div class='h2 hero pt-2'>
                {{ settings.content }}
            </div>
        </div>

        <div class='col-12 col-md-6 text-end'>
            <img class='lazy-loaded' src="{{ settings.image | img_url: '578x384'}}" data-lazy-type='image' data-src="{{ settings.image | img_url: '578x384'}}"/>
        </div>
    </div>
</section>

{% endif %}

<hr class='mb-10'/>
