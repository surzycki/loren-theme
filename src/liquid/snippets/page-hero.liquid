<section class='container mt-10 mb-12'>
    <div class='row'>
        <div class='col-12 col-md-7 text-start pe-3'>
            <h1 class='h1 mb-2 pt-8'>
                {{ settings.hero_title }}
            </h1>

            <h2 class='h2 hero mb-4'>
                {{ settings.hero_subtitle }}
            </h2>

            <h3 class='h2'>
                {{ settings.hero_content }}
