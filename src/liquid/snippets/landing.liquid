<style>
  .landing--{{ id  }} {
     background-image: url({{settings.desktop_image | img_url: 'master'}})
  }
</style>

<section class="landing landing--{{ id }}">
    <div class='container'>
        {% render 'header' %}

        <div class='pt-3'>
            <h1 class='h1 hero brand mb-4'>
                {{ 'general.hero.title' | t }}
            </h1>

            <h2 class='h2 mb-6'>
                {{ 'general.hero.sub-title' | t }}
            </h2>

            <a href='/products/mattino' class='btn btn-outline-secondary text-uppercase'>
                {{ 'general.button.order-now' | t }}
            </a>
        </div>
    </div>
</section>
