{% for block in section.blocks %}
    {% case block.type %}

    {% when 'notification-bar' %}
    {%  render 'notification-bar' %}

    {% when 'footer-top' %}
    {%  render 'footer-top' %}

    {% when 'footer-bottom' %}
    {%  render 'footer-bottom' %}

    {% when 'header' %}
    {%  render 'header' with {
        needsContainer: true
    }%}

    {% endcase %}
{% endfor %}


{% schema %}
                {
                  "blocks": [
                    {
                      "type": "header",
                      "name": "Header",
                      "settings": []
                    },
                    {
                      "type": "notification-bar",
                      "name": "Notification bar",
                      "settings": []
                    },
                    {
                      "type": "footer-top",
                      "name": "Top Footer",
                      "settings": []
                    },
                    {
                      "type": "footer-bottom",
                      "name": "Bottom Footer",
                      "settings": []
                    }
                  ]
                }
{% endschema %}
