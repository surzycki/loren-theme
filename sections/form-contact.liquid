<div class="form-contact container pt-14 pt-md-20 pt-xl-22">

    <div class="row justify-content-md-center">
        <div class="col-12 col-md-10 col-lg-8">
            <div class='text-center pb-4'>
                <h1 class='h1 pb-1'>
                    {{ 'contact.title' | t }}
                </h1>
                <p>
                    {{ 'contact.sub-title' | t }}
                </p>
            </div>
        </div>
    </div>


    <div class="row justify-content-md-center">
        <div class="col-12 col-md-10 col-lg-8">
            {% form 'contact' %}
                {%- if form.posted_successfully? -%}
                    <p class="text-center text-primary" autofocus>
                        <strong>{{ 'contact.post_success' | t }}
                        </strong>
                    </p>
                {%- endif -%}

                <div class="row"/>
                    <div class="col-12 col-md-6">
                        <input class="form-control form-control-lg mb-3"
                            name="contact[name]"
                            type="text"
                            autocomplete="name"
                            placeholder={{ 'contact.name' | t }}
                            aria-label={{ 'contact.name' | t }}/>
                    </div>

                    <div class="col-12 col-md-6">

                        <input class="form-control form-control-lg mb-3 {% if form.errors contains 'email' %} field-error {% endif %}"
                            name="contact[email]"
                            type="email"
                            autocomplete="email"
                            spellcheck="false"
                            autocapitalize="off"
                            placeholder={{ 'contact.email' | t }}
                            aria-label={{ 'contact.email' | t }}/>

                        {%- if form.errors contains 'email' -%}
                            <div class="mt-n2 mb-2">
                                <span class="text-danger">{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}</span>
                            </div>
                        {%- endif -%}
                    </div>
                </div>


                <div class="row"/>
                    <div class="col-12">
                        <input class="form-control form-control-lg mb-3"
                            name="contact[phone]"
                            autocomplete="tel"
                            pattern="[0-9\-\.\+]*"
                            type="tel"
                            placeholder={{ 'contact.phone' | t }}
                            aria-label={{ 'contact.phone' | t }}/>
                    </div>
                </div>

                <div class="row"/>
                    <div class="col-12">
                        <textarea
                            rows="6"
                            class="form-control form-control-lg mb-2 {% if form.errors contains 'message' %} field-error {% endif %}"
                            name="contact[message]"
                            placeholder={{ 'contact.message' | t }}>
                            {{- form.body -}}
                        </textarea>

                        {%- if form.errors contains 'message' -%}
                            <div class="mt-n1 mb-2">
                                <span class="text-danger">{{ form.errors.translated_fields['message'] | capitalize }} {{ form.errors.messages['message'] }}</span>
                            </div>
                        {%- endif -%}
                    </div>
                </div>

                <input class="btn btn-cta text-uppercase w-100 mb-6"
                    type="submit"
                    value={{ 'contact.send' | t }}>

            {% endform %}
        </div>
    </div>
</div>


{% schema %}
  {
    "name": "Contact Form",
    "tag": "section",
    "settings":[
    ],
    "presets": [
      {
        "name": "Contact Form",
        "category": "Main"
      }
    ]
  }
{% endschema %}
