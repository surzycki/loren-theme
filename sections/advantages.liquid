{% assign advantages = 'capsule,fair-trade,recycle' | split: ',' %}

<style>
 .advantages--{{ id }} {
    background-image: url({{ section.settings.image-desktop | img_url: 'master' }});
  }
</style>

<div class='advantages advantages--{{ id }}'>
    <div class='container pt-8 pt-md-9 pt-xl-12'>
        <h1 class='h1 text-center text-light mb-6 mb-md-9 mb-xl-16'>
            {{ 'general.engagements.title' | t }}
        </h1>

        <div class='row'>
          {% for advantage in advantages %}
             <div class='col-md-4 mb-4 text-center'>
                <div class='mb-3 mb-xl-5'>
                     {% case advantage %}
                     {% when 'capsule' %}
                        {% render 'icon-capsule' %}
                     {% when 'fair-trade' %}
                        {% render 'icon-fair-trade' %}
                     {% when 'recycle' %}
                        {% render 'icon-recycle' %}
                     {% else %}
                        Nothing yet
                     {% endcase %}
                </div>
                <h2 class='h2 text-light px-sm-16 px-md-1'>
                  {{ 'general.engagements.' | append: advantage | t }}
                </h2>
             </div>
          {% endfor %}
        </div>
    </div>
</div>

{% schema %}
  {
    "name": "Competitive Advantages",
    "tag": "section",
    "class": "section",
    "settings":[
      {
        "type": "image_picker",
        "id": "image-desktop",
          "label": "Bacground image",
          "info": "Dimensions: 2880x1552"
      }
    ],
    "presets": [
      {
        "name": "Competitive Advantages",
        "category": "Main"
      }
    ]
  }
{% endschema %}
