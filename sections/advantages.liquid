{% assign advantages = 'capsule,fair-trade,recycle' | split: ',' %}

<style>
 .advantages--{{ id }} {
    background-image: url({{ section.settings.image-desktop | img_url: 'master' }});
  }
</style>

<div class='advantages advantages--{{ id }}'>
    <div class='container pt-8'>

        <h1 class='h1 text-center text-light mb-17'>
            {{ 'general.engagements.title' | t }}
        </h1>

        <div class='row'>
          {% for advantage in advantages %}
             <div class='col-md-4 text-center'>
               {% case advantage %}
                 {% when 'capsule' %}
                   {% render 'icon-capsule' %}
                 {% when 'fair-trade' %}
                   {% render 'icon-fair-trade' %}
                 {% when 'recycle' %}
                   {% render 'icon-recycle' %}
                 {% else %}
                   Nothing yet
                {% endcase %}

                <h2 class='h2 hero text-light'>
                  {{ 'general.engagements.' | append: advantage | t }}
                </h2>
             </div>
          {% endfor %}
        </div>

    <!-- <div class='row'>
         <div class='col-6'>

         <div class='pb-24'></div>
         </div>
         <div class='d-none d-md-block col-12 col-md-6' id='engagement-image'>
         </div>
         </div> -->
    </div>
</div>

