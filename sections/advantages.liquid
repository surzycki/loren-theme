  {
    "name": "Competitive Advantages",
    "tag": "section",
    "class": "section",
    "settings":[
      {
        "type": "image_picker",
        "id": "image-desktop",
          "label": "Bacground image",
          "info": "Dimensions: 2880x1552"
      }
    ],
    "presets": [
      {
        "name": "Competitive Advantages",
        "category": "Main"
      }
    ]
  }
{% endschema %}
