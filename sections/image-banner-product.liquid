<style>
  .image-banner-product-mobile--{{ section.id  }} {
     background-image: url({{ product.images[1] | img_url: 'master'}})
  }
</style>

<div id="image-banner-product-mobile" class="d-md-none image-banner-product image-banner-product-mobile--{{ section.id }}">
    <div class='pt-11 text-center'>
      <h1 class='h1'>
          {{ product.title  }}
      </h1>

      <h3 class="h3">
          {{ product.metafields.descriptions.blend.value }}
      </h3>

      <p>
          {{ 'product.capsules-per-box' | t }} {{ product.price | money  }}
      </p>

      <div id='react-cart-control'
           data-variant-id={{ product.variants.first.id }}
           data-variant-price={{ product.price }}
           data-add-to-cart="{{ 'cart.general.add-to-cart' | t }}"
           data-thank-you="{{ 'cart.general.thank-you' | t }}">
      </div>
    </div>
</div>

<div id="product-mobile-description" class="d-md-none">
    <h2 class='h2 mb-24'>
        {{ product.description }}
    </h2>
</div>

{% schema %}
  {
    "name": "t:sections.image-banner-product.name",
    "tag": "section",
    "class": "section",
    "settings": [
    ],
    "presets": [
      {
        "name": "t:sections.image-banner-product.name",
        "category": "Product"
      }
  ]
}
{% endschema %}
