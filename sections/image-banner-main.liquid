<style>
  .main-image-banner--{{ section.id  }} {
     background-image: url({{section.settings.image-desktop | img_url: 'master'}})
  }
</style>

<div class="main-image-banner main-image-banner--{{ section.id }}">
    <div class='container'>
        <div class='pt-24'>
            <h1 class='h1 hero brand mb-8'>
                {{ 'general.hero.title' | t }}
            </h1>

            <h2 class='h2 mb-6'>
                {{ 'general.hero.sub-title' | t }}
            </h2>

            <a href='/products/mattino' class='btn btn-outline-secondary text-uppercase'>
                {{ 'general.button.order-now' | t }}
            </a>
        </div>
    </div>
</div>

{% schema %}
  {
    "name": "t:sections.image-banner-main.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "image_picker",
        "label": "t:sections.image-banner-main.settings.image.label",
        "id": "image-desktop",
        "label": "Image for Desktops",
        "info": "Dimensions: 2880x1792"
      },
      {
        "type": "image_picker",
        "label": "t:sections.image-banner-main.settings.image.label",
        "id": "image-tablet",
        "label": "Image for Tablets",
        "info": "Dimensions: 2880x1792"
      },
      {
        "type": "image_picker",
        "label": "t:sections.image-banner-main.settings.image.label",
        "id": "image-mobile",
        "label": "Image for Mobile",
        "info": "Dimensions: 2880x1792"
      }
    ],
    "presets": [
      {
        "name": "t:sections.image-banner-main.name",
        "category": "Landing Page"
      }
  ]
}
{% endschema %}
